<?xml version='1.0' encoding='utf-8'?>
<widget id="io.markab.makingthecase" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Making the case</name>
    <description>
        Protect the integrity of your images
    </description>
    <author email="samalghanmi@markab.io" href="https://markab.io">
        Sam Alghanmi
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access origin="cdvfile://*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="CameraUsesGeolocation" value="true" />
</widget>
